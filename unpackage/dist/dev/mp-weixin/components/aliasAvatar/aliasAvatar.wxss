.alias-avatar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  height: 60rpx;
}
.alias-avatar .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 18rpx;
}
.alias-avatar .avatar .avatar-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 18rpx;
}
.alias-avatar .alias {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  margin-left: 15rpx;
  line-height: 60rpx;
  word-break: break-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  /* 超出部分省略号 */
  overflow: hidden;
  /*超出隐藏*/
  color: #646464;
}
.alias-avatar:active {
  opacity: 0.1;
}
.trans {
  -webkit-transition: 0.3s opacity ease-out;
  transition: 0.3s opacity ease-out;
}


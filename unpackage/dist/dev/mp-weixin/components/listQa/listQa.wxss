.list-qa {
  margin-bottom: 15rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  color: #afafaf;
  border-bottom: 1px solid #efefef;
  z-index: 0;
  position: relative;
  height: auto;
  width: auto;
}
.list-qa .title {
  font-size: 30rpx;
  font-weight: bolder;
}
.list-qa .alias-avatar-org {
  height: 42rpx;
  line-height: 42rpx;
}
.list-qa .content {
  margin-top: 15rpx;
  color: #646464;
  border: none;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list-qa .evaluation {
  white-space: pre;
  color: #afafaf;
  font-size: 24rpx;
}
.list-qa .evaluation .margin {
  margin-right: 15rpx;
}


.org {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  height: 60rpx;
  line-height: 60rpx;
}
.org .org-tag {
  color: #646464;
  font-size: 30rpx;
}
.org .org-name {
  margin-left: 10rpx;
  text-align: left;
  color: #afafaf;
  font-size: 24rpx;
  word-break: break-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  /* 超出部分省略号 */
  overflow: hidden;
  /*超出隐藏*/
}


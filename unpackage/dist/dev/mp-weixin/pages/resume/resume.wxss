.btn-page {
  margin: 100px;
  position: relative;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: auto;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.btn-page .btn-box {
  position: relative;
  width: 80%;
  height: 40px;
  font-size: 12px;
  background-color: #f9f9f9;
  border-radius: 5px;
  margin: 10px;
  overflow: hidden;
  box-shadow: 1px 2px 3px rgba(100, 100, 100, 0.5);
}
.btn-page .btn-box .col {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 20px;
}

